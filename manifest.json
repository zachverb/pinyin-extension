{
    "name": "Chinese Character -> Pinyin Clipboard Extension",
    "description": "Copy Chinese Characters to Pinyin",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "contextMenus",
        "tabs",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://helloacm.com/*"
    ],
    "background": {
        "service_worker": "main.js",
        "type": "module"
    },
    "icons": {
        "128": "images/icon128.png"
    }
}